<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/bg_activity"
	tools:context="alex.loginanimation.MainActivity">

	<android.support.v7.widget.CardView
		android:id="@+id/cv_background"
		android:layout_width="match_parent"
		android:layout_height="350dp"
		android:layout_gravity="center"
		android:layout_marginBottom="42dp"
		android:layout_marginEnd="40dp"
		android:layout_marginStart="40dp"
		android:layout_marginTop="24dp"
		app:cardBackgroundColor="@color/transparent_white"
		app:cardCornerRadius="@dimen/card_corner_radius"
		app:cardElevation="0dp"
		app:cardPreventCornerOverlap="true">

	</android.support.v7.widget.CardView>

	<android.support.v7.widget.CardView
		android:id="@+id/cv_login"
		android:layout_width="match_parent"
		android:layout_height="350dp"
		android:layout_gravity="center"
		android:layout_margin="30dp"
		app:cardCornerRadius="@dimen/card_corner_radius"
		app:cardElevation="@dimen/card_elevation"
		app:cardPreventCornerOverlap="true">

		<LinearLayout
			android:id="@+id/l_login"
			style="@style/InsetLayout"
			android:clipToPadding="false"
			android:divider="@drawable/divider_offset"
			android:isScrollContainer="true"
			android:orientation="vertical"
			android:showDividers="middle">

			<TextView
				android:id="@+id/tv_title"
				style="@style/Title"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginEnd="-24dp"
				android:layout_marginStart="-24dp"
				android:paddingEnd="24dp"
				android:paddingStart="24dp"
				android:text="Login"/>

			<android.support.design.widget.TextInputLayout
				android:id="@+id/til_username"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="Username">

				<EditText
					android:id="@+id/et_username"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					/>

			</android.support.design.widget.TextInputLayout>

			<android.support.design.widget.TextInputLayout
				android:id="@+id/til_password"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="Password">

				<EditText
					android:id="@+id/et_password"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:inputType=""/>

			</android.support.design.widget.TextInputLayout>

			<Button
				android:id="@+id/b_login"
				style="@style/OkButton"
				android:background="@drawable/bg_frame"
				android:enabled="false"
				android:text="GO"
				android:textColor="@color/transparent_black"/>

			<TextView
				android:id="@+id/textView2"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:text="Forgot your password?"
				android:textColor="@color/transparent_black"/>

		</LinearLayout>

	</android.support.v7.widget.CardView>

	<include
		layout="@layout/screen_register"
		android:layout_width="wrap_content"
		android:layout_height="350dp"
		android:layout_gravity="center"
		android:layout_margin="30dp"
		android:visibility="invisible"/>

	<View
		android:id="@+id/inner_highlight"
		style="@style/LeftHighlight"
		android:translationX="1dp"
		app:layout_anchor="@id/tv_title"
		app:layout_anchorGravity="center_vertical"/>

	<View
		android:id="@+id/inner_view"
		android:layout_width="0dp"
		android:layout_height="130dp"
		android:layout_marginEnd="@dimen/anchor_force_center"
		android:layout_marginTop="@dimen/anchor_force_center"
		android:visibility="invisible"
		app:layout_anchor="@id/cv_login"
		app:layout_anchorGravity="top|end"/>


	<android.support.design.widget.FloatingActionButton
		android:id="@+id/b_register"
		android:layout_width="80dp"
		android:layout_height="80dp"
		android:layout_marginEnd="@dimen/anchor_force_center"
		android:layout_marginTop="125dp"
		android:clickable="true"
		android:scaleType="center"
		android:scrollbarAlwaysDrawHorizontalTrack="false"
		app:elevation="8dp"
		app:layout_anchor="@id/inner_view"
		app:layout_anchorGravity="bottom|center_horizontal"
		app:srcCompat="@drawable/ic_add_white_32dp"/>

</android.support.design.widget.CoordinatorLayout>
